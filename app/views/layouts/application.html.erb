<!DOCTYPE html>
<html ng-app='miniwdwot'>
<head>
  <title>Miniwdwot</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <script src="http://cdn.leafletjs.com/leaflet-0.7.1/leaflet.js"></script>
  <link rel="stylesheet" href="http://cdn.leafletjs.com/leaflet-0.7.1/leaflet.css" />
</head>
<body>

<div ng-controller='AdminCtrl' ng-include="'/templates/layout/admin_nav.html'"></div>

  <div class='alert-wrapper'>
    <div class="col-md-6 col-md-offset-3">
      <div ng-show='alert'  class="alert alert-{{ alert.type }}"><p>{{ alert.message }}</p></div>
    </div>
  </div>

<div class='container'>

  <div class='row'>
    <div class="col-md-10 col-md-offset-1">

      <div ng-hide='hideAll' ng-controller='NavCtrl'>

        <div ng-hide="badOrg">
          <div ng-include="'/templates/layout/header.html'"></div>
          <br>
        </div>

        <div ng-show="badOrg">
          <h1>Looks like that organization no longer exists.</h1>
          <p>Sorry.</p>
          <p>Try going <a href="/#/">home</a>.</p>
        </div>
      </div>

      <div ng-hide='badOrg' ng-view></div>

    </div>
  </div>
</div>

</body>
</html>
